<div id="preview">
  <div class="slider">
    <ul class="slides">
      <% @albums.each do |album| %>
      <li>
        <img src= <%= album.image.url(:large) %> >
      </li>
      <% end %>
    </ul>
  </div>
</div>
<div id="projects">
  <div class="projectbanner">
    <h2 class="title grey-text text-darken-1">Projects</h2>
    <h3 class= "title grey-text text-darken-1">Interior Designs</h3>
    <%=image_tag("ProjectBanner.jpg", style: "height:120%;width:100%", class:"background")%>
  </div>
  <div class="cards">
    <% @projects.each do |project|%>
    <div class="card stickycol s4 hoverable">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src= <%= project.image.url(:large) %> >
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4"><%= project.title %><i class="material-icons right">more_vert</i></span>
          <%= link_to "Click here for more on this project", album_path(project), :class => "center blue-text text-darken-1" %>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4"><%= project.title %><i class="material-icons right">close</i></span>
          <ul>
            <li>
              Project Year: <%= project.project_year %>
            </li>
            <li>
              Location: <%= project.location %>
            </li>
            <li>
              Price: <%= project.price %>
            </li>
            <li>
              Description: <%= project.album_description %>
            </li>
          </ul>
      </div>
    </div>
    <% end %>
  </div>
</div>

