<%= render '/errors' %>

<%= form_for @image_edit, html: { multipart: true } do |f| %>

<%= f.label :name %>:
<%= f.text_field :name , placeholder: @image_edit.title%><br />

<%= f.label :description %>:
<%= f.text_field :album_description, placeholder: @image_edit.album_description %><br />

<%= f.label :image %>:
<%= image_tag @image_edit.image.url(:large) %> <br>
<%= f.file_field :image %><br />

<%= f.submit %>
<% end %>