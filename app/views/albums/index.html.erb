<% @albums.each do |album|%>
	<%= image_tag album.image.url(:medium) %> <br>
	<p>Project: <%= link_to album.title, album_path(album) %></p> 
	<p>Project Year: <%= album.project_year %> </p>  
	<p>Price: <%= album.price %> </p> 
	<p>Location: <%= album.location%></p>  
	<p>Description: <%= album.album_description%></p>
	<%= link_to "Edit Album", edit_album_path(album) %>
	<%= link_to "Add Images to Album", new_album_image_path(album) %>
	<%= link_to "Delete Album", album_path(album), :method => 'delete' %> <br> <br>
<% end %>